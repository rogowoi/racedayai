{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "AUTH_SECRET",
        "STRAVA_CLIENT_ID",
        "STRAVA_CLIENT_SECRET",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SEASON_ANNUAL_PRICE_ID",
        "STRIPE_SEASON_MONTHLY_PRICE_ID",
        "STRIPE_UNLIMITED_ANNUAL_PRICE_ID",
        "STRIPE_UNLIMITED_MONTHLY_PRICE_ID",
        "XAI_API_KEY",
        "RESEND_API_KEY",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "R2_ACCOUNT_ID",
        "R2_ACCESS_KEY_ID",
        "R2_SECRET_ACCESS_KEY",
        "R2_BUCKET_NAME",
        "GARMIN_CLIENT_ID",
        "GARMIN_CLIENT_SECRET",
        "NEXT_PUBLIC_APP_URL",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
